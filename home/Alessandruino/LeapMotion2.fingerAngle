inmoov = Runtime.createAndStart("inmoov","InMoov")

inmoov.startRightHand("COM3")

inmoov.rightHand.index.setMinMax(30,90)

leap = Runtime.createAndStart("leap","LeapMotion2")
 
from math import degrees
 
leap.addFrameListener(python)
  
def onFrame(frame):
 
 palm = frame.hands().rightmost().palmNormal()
 finger = frame.hands().rightmost().fingers().get(1).direction()
 angle = int(degrees(palm.angleTo(finger)))
 inmoov.rightHand.index.moveTo(angle)
  
  
leap.startTracking()
